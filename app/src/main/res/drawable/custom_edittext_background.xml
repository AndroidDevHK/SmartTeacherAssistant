<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D1D1D1" /> <!-- Change color for pressed state -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Add stroke for pressed state -->
            <corners android:radius="12dp" /> <!-- Update corner radius -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#EDEDED" />
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Add stroke for focused state -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Add stroke for default state -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
