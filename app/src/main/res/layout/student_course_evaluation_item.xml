<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/stdcard"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/studentNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Hasnat"
            android:textStyle="bold"
            android:textColor="@color/accent4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/studentRollNoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No: 6425"
            android:textStyle="bold"
            android:textColor="@color/accent4"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/EvalDetailsTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Evaluation Details : "
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#FF0047"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/EvaluationListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#ccc" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
