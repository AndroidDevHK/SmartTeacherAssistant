<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ActivitySample"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/projectImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/app_logo" />
    <TextView
        android:id="@+id/projectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Teacher Assistant"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:gravity="center" />
    <TextView
        android:id="@+id/projectDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All in one teacher utility."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/criterion1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criterion 1: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <RatingBar
            android:id="@+id/criterion1Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/criterion2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criterion 2: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <RatingBar
            android:id="@+id/criterion2Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_marginTop="4dp" />
       <TextView
            android:id="@+id/criterion3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criterion 3: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <RatingBar
            android:id="@+id/criterion3Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_marginTop="4dp" />


    </LinearLayout>

    <EditText
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comments"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Evaluation"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp" />

</LinearLayout>
